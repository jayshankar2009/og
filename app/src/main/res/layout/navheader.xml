<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/lnr_nav_header"
     android:padding="15dp"
    android:layout_height="120dp">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_profile_pic"
        android:src="@drawable/genie"
        android:scaleType="centerCrop"

        android:gravity="center_vertical" />
    <Space
        android:layout_width="15dp"
        android:layout_height="50dp"
        android:id="@+id/space"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_profile_pic"
        android:layout_toEndOf="@+id/iv_profile_pic" />
    <!--
            android:src="@drawable/avtar3"
    -->
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/txt_profile_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textAllCaps="false"
        android:textSize="@dimen/Normal"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/space"
        />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email ID"
        android:id="@+id/txt_profile_email"
        android:textColor="#ffffff"
        android:layout_below="@+id/txt_profile_name"
        android:textSize="@dimen/small"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/space">

    </TextView>



</RelativeLayout>

