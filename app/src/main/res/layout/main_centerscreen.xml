<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_gravity="center"
              android:layout_margin="5dp"
              android:id="@+id/ll_fragment_container"
              android:background="@drawable/main_linerlayout_border"

              android:orientation="vertical"
    >


    <TextView
        android:id="@+id/tx_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/button_grey"
        android:text="Welcome Demo user"
        android:textSize="20sp"/>

    <Space
        android:id="@+id/sp_top"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

    <LinearLayout
        android:id="@+id/LL_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="1dp"
        android:orientation="horizontal"
        >


        <RelativeLayout
            android:id="@+id/rl_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/main_linerlayout_border">

            <ImageButton
                android:id="@+id/ib_customer_xx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/demo"/>

            <TextView
                android:id="@+id/tx_customerlist"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/ib_customer_xx"
                android:background="@color/blue"

                android:gravity="center"
                android:hint="Customer List"
                android:inputType="number"

                />


        </RelativeLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/main_linerlayout_border">

            <ImageButton
                android:id="@+id/ib_customersales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/demo"/>

            <TextView
                android:id="@+id/tx_orders"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/ib_customersales"
                android:background="@color/blue"
                android:gravity="center"
                android:text="100"
                />


            <TextView
                android:id="@+id/tx_order_numbers"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentRight="@id/tx_orders"
                android:background="@color/blue"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="82"

                />
        </RelativeLayout>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:id="@+id/LL_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:background="@drawable/main_linerlayout_border"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_imageheader"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="Medicine and Health Care Products"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/iv_centerimage"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/demo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tx_Inventory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@color/blue"
                android:drawableLeft="@drawable/demo"
                android:gravity="left|center_vertical"

                android:paddingLeft="10dp"
                android:text="Inventory"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tx_inv_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/blue"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="12345678"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_linerlayout_border"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="Order and bill details"
            android:textSize="20sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="0.25"
                android:background="@drawable/main_linerlayout_border">


                <TextView
                    android:id="@+id/txt_pendingbills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/demo"
                    android:gravity="bottom"
                    android:text="Pending Bill"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/main_linerlayout_border">

                <ImageButton
                    android:id="@+id/ib_Orderdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/demo"/>

                <TextView
                    android:id="@+id/btn_Order"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/ib_Orderdetail"
                    android:background="@color/blue"

                    android:gravity="center"
                    android:hint="Customer List"
                    android:inputType="number"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rl_customersalesorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/main_linerlayout_border">

                <ImageButton
                    android:id="@+id/ib_salesreturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/demo"/>

                <TextView
                    android:id="@+id/txt_salesreturn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/ib_salesreturn"
                    android:background="@color/blue"

                    android:gravity="center"
                    android:inputType="number"
                    android:text="Customer List"

                    />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>