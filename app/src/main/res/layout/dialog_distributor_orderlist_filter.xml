<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:orientation="vertical"
    android:layout_width="180dp"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:text="FILTER ORDER BY DATE"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:hint="Start Date"
        android:textColorHint="@color/black"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/small"
        android:background="@drawable/textbox_border"
        android:id="@+id/start_date"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:hint="End Date"
        android:padding="8dp"
        android:textColorHint="@color/black"
        android:layout_marginTop="@dimen/_4sdp"
        android:id="@+id/end_date"
        android:layout_margin="8dp"
        android:gravity="left|center"
        android:background="@drawable/textbox_border"
        android:drawablePadding="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/small"
        android:layout_height="wrap_content" />


   <View
       android:layout_width="wrap_content"
       android:layout_height="2dp"
       android:layout_marginTop="@dimen/_2sdp"
       android:layout_marginBottom="@dimen/_2sdp"
       android:background="@color/lighter_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="FILTER ORDER BY STATUS"
        android:padding="8dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small"
        android:layout_height="wrap_content" />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RadioButton
        android:layout_width="wrap_content"
        android:hint="PROCESSING"
        android:padding="8dp"
        android:textColorHint="@color/black"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/chk_processing"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/small"
        android:layout_height="wrap_content" />
    <RadioButton
        android:layout_width="wrap_content"
        android:hint="SUBMITED"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/chk_submited"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/small"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content" />
    <RadioButton
        android:layout_width="wrap_content"
        android:hint="COMPLETED"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/small"
        android:id="@+id/chk_completed"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content" />
    <RadioButton
        android:layout_width="wrap_content"
        android:hint="DELIVERED"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:id="@+id/chk_delivered"
        android:textSize="@dimen/small"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/main_linerlayout_border"
            android:text="CLEAR"
            android:id="@+id/btn_clear"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/main_linerlayout_border"
            android:text="FILTER"
            android:id="@+id/btn_filter"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:layout_height="wrap_content" />


    </LinearLayout>



</LinearLayout>
