<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="vertical">
    <AutoCompleteTextView
        android:id="@+id/autoCompleteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/light_green"
        android:completionThreshold="1"
        android:drawableLeft="@drawable/search_icon"
        android:drawablePadding="7dp"
        android:drawableTint="@color/colorPrimary"
        android:hint="Search a medicine"
        android:maxLines="1"
        android:padding="7dp"
        android:singleLine="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:id="@+id/slayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <!--   <View
                   android:id="@+id/centerView2"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentTop="true"
                   android:layout_centerInParent="true"
                   android:layout_marginBottom="5dp"
                   android:background="@color/lighter_gray"

                   />-->


            <TextView
                android:id="@+id/lblproductname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="@dimen/small" />


            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblproductname"
                android:layout_margin="@dimen/_8sdp"
                android:id="@+id/product_name"
                android:inputType="text"
                android:background="@drawable/textbox_border"
                android:padding="@dimen/_6sdp" />

            <!--<TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/productname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lblproductname"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/Normal"
                tools:text="Rs." />-->

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layoutt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/slayout"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <!--<View
                android:id="@+id/centerView2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:background="@color/lighter_gray"

                />-->





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblQTY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Qty"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />

                    <EditText
                        android:id="@+id/QTY"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/textbox_border"
                        android:text=""
                        android:inputType="number"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/Normal" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/lblBatchnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Batch Number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />

                    <EditText

                        android:id="@+id/bachnumber_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/lblBatchnumber"
                        android:layout_marginBottom="10dp"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/textbox_border"
                        android:text=""
                        android:inputType="number"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/Normal"
                        />




                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/lblInvoiceno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Invoice Number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />

                <EditText

                    android:id="@+id/invoice_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lblBatchnumber"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/textbox_border"
                    android:text=""
                    android:inputType="number"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/Normal"
                    />




            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblmfgdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Expr.Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/mfgdate_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/textbox_border"
                        android:text=""
                        android:inputType="date"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/Normal"
                        />



                </LinearLayout>





        </LinearLayout>


    </RelativeLayout>


</LinearLayout>


        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@color/colorAccent"
            android:text="CANCEL"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white" />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@color/colorAccent"
            android:text="ADD"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white" />
    </LinearLayout>
    </RelativeLayout>
