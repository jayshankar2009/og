<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="220dp"
  android:padding="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="Start Date : "
        android:padding="5dp"
        android:textColor="@color/ordergenie_gray"
        android:textSize="@dimen/Extrasmall"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="200dp"
        android:hint="Start Date"
        android:padding="5dp"
        android:id="@+id/txt_start_date"
        android:background="@drawable/main_linerlayout_border"
        android:textSize="@dimen/small"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="End Date : "
        android:padding="5dp"
        android:textColor="@color/ordergenie_gray"
        android:textSize="@dimen/Extrasmall"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="200dp"
        android:hint="End Date"
        android:padding="5dp"
        android:id="@+id/txt_end_date"
        android:background="@drawable/main_linerlayout_border"
        android:textSize="@dimen/small"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <CheckBox
        android:layout_width="match_parent"
        android:text="Pending Invoice"
        android:padding="10dp"
        android:id="@+id/chk_pending"
        android:textSize="@dimen/small"
        android:layout_height="wrap_content" />

    <CheckBox
        android:layout_width="match_parent"
        android:text="Delivered Invoices"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/chk_completed"
        android:textSize="@dimen/small"
        android:layout_height="wrap_content" />

    <CheckBox
        android:layout_width="match_parent"
        android:text="Not Delivered Invoices"
        android:padding="10dp"
        android:id="@+id/chk_notdelivered"
        android:textSize="@dimen/small"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/main_linerlayout_border"
            android:text="CLEAR"
            android:id="@+id/btn_clear"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/main_linerlayout_border"
            android:text="FILTER"
            android:id="@+id/btn_filter"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>