<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:orientation="vertical"
    android:layout_width="230dp"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:text="Show Stockist by medicine Name"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/ordergenie_gray"
        android:textSize="@dimen/Extrasmall"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="200dp"
        android:hint="Medicine"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/main_linerlayout_border"
        android:textSize="@dimen/small"
        android:id="@+id/med_name"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="Show Stockist by clientLocation"
        android:padding="8dp"
        android:textColor="@color/ordergenie_gray"
        android:textSize="@dimen/Extrasmall"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="200dp"
        android:hint="Location"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="8dp"
        android:id="@+id/location_txt"
        android:background="@drawable/main_linerlayout_border"
        android:textSize="@dimen/small"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/main_linerlayout_border"
            android:text="CLEAR"
            android:textSize="@dimen/Extrasmall"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/clear"
            android:padding="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/Extrasmall"
            android:background="@drawable/main_linerlayout_border"
            android:text="FILTER"
            android:id="@+id/filter"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>
