            <RelativeLayout
                android:id="@+id/layinvoiceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customborder"
                android:padding="15dp">

                <TextView
                    android:id="@+id/lblinvoiceid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:text="Invoice Number"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/invoiceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lblinvoiceid"
                    android:layout_marginRight="10dp"
                    android:text="784586"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Subnormal" />


                <View
                    android:id="@+id/centerView"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="#e7e7e7"

                    />


                <TextView
                    android:id="@+id/lblorderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/centerView"
                    android:text="Order Date"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/orderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblorderDate"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/centerView"
                    android:text="12/02/2016"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Subnormal" />
            </RelativeLayout>


