    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="No of  Boxes"
                android:textAppearance="@style/TextViewCustomFont"
                android:textColor="@color/button_grey"
                android:textSize="@dimen/mini" />

            <TextView
                android:id="@+id/tx_no_of_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="0"
                android:textAppearance="@style/Roboto_thin"
                android:textSize="@dimen/small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="No of Items: "
                android:textAppearance="@style/TextViewCustomFont"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/mini" />

            <TextView
                android:id="@+id/tx_no_of_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="0"
                android:textAppearance="@style/Roboto_thin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="No of Packets"
                android:textAppearance="@style/TextViewCustomFont"
                android:textColor="@color/button_grey"
                android:textSize="@dimen/mini" />

            <TextView
                android:id="@+id/tx_no_of_packets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="0"
                android:textAppearance="@style/Roboto_thin"
                android:textSize="@dimen/small" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remark: "/>
        <TextView
            android:id="@+id/txt_statuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Initiated"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</LinearLayout>