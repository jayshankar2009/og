    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:padding="8dp"
        android:text="FILTER PRODUCTS BY"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_border"
        android:orientation="vertical">
    <Spinner
        android:id="@+id/sp_manufacture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8sdp"
        android:entries="@array/manufacture_name"
        android:gravity="left|center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_border"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
    <Spinner
        android:id="@+id/sp_product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8sdp"
        android:entries="@array/product_category"
        android:gravity="left|center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_border"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
    <Spinner
        android:id="@+id/sp_product_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8sdp"
        android:entries="@array/product_form"
        android:gravity="left|center"
        android:hint="PRODUCT FORM"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <CheckBox
        android:id="@+id/pending_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:hint="SCHEME AVAILABLE"
        android:textColorHint="@color/black"
        android:textSize="@dimen/small" />
