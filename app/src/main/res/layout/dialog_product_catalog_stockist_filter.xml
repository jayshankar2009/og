    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/lighter_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:padding="8dp"
        android:text="FILTER PRODUCT STOCKS"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small" />

    <RadioGroup
        android:id="@+id/radiostockGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/no_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="left|center"
            android:hint="NO STOCK"
            android:padding="8dp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/small" />

        <RadioButton
            android:id="@+id/low_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="left|center"
            android:hint="LOW STOCK"
            android:padding="8dp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/small" />

        <RadioButton
            android:id="@+id/moderate_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="left|center"
            android:hint="MODERATE STOCK"
            android:padding="8dp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/small" />

        <RadioButton
            android:id="@+id/available_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="left|center"
            android:hint="AVAILABLE"
            android:padding="8dp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/small" />

        <RadioButton
            android:id="@+id/plenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="left|center"
            android:hint="PLENTY"
            android:padding="8dp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/small" />

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/main_linerlayout_border"
            android:text="CLEAR"
            android:id="@+id/btn_clear"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/main_linerlayout_border"
            android:text="FILTER"
            android:id="@+id/btn_filter"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>
