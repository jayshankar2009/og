        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/heading_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="false"
                android:orientation="horizontal"
                android:padding="5dp">


                <TextView
                    android:id="@+id/txt_productname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:focusable="false"
                    android:maxLines="1"
                    android:text="ACAMPTAS 333"
                    android:textAppearance="@style/Roboto_thin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Subnormal" />


                <ImageView
                    android:id="@+id/indicator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:padding="4dp"
                    android:src="@drawable/circle" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ITEMS"
                    android:textColor="@color/button_grey"
                    android:layout_weight="1"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/txt_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RETURN BY:"
                    android:textColor="@color/button_grey"
                    android:layout_weight="1"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/txt_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GUPTA MEDICOS"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>



        </LinearLayout>



        <RelativeLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_weight="0.3"
            android:gravity="right"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textview_orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Id"
                android:textColor="@color/button_grey"
                android:textSize="@dimen/SubnormalSamll" />



            <ImageView
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:src="@drawable/down_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textview_orderid"
                />

            <TextView
                android:layout_below="@+id/textview_orderid"
                android:id="@+id/textview_ptrvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47.72"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/Subnormal"
                android:textColor="#000000" />


