<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="1dp"
    android:id="@+id/rl_pendingbills"
    android:background="@drawable/customborder"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/play_arrow_right_grey"
        android:layout_margin="5dp"
        android:alpha=".5" />
    <ImageButton
        android:id="@+id/ib_pendingbills"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:background="@color/white"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bills"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/txt_pendingbills"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/ib_pendingbills"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="@dimen/Normal"
        android:text="Pending Bill"
        android:alpha=".7" />
</LinearLayout>