<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/distribtcircle_textview"
                android:text="Name"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circular_textview_drawable"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textAppearance="@style/Roboto_thin"
                android:textColor="@color/white"
                android:textSize="@dimen/small"/>




        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textview_notificationname"
                android:text="Chemist Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview_notificationtime"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:maxLength="10"
                    android:layout_height="wrap_content"
                    android:text="Timing"/>





            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/textview_notificationprize"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="Prize"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginRight="@dimen/_8sdp"
                android:drawablePadding="1dp"
                android:textColor="#000000"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>