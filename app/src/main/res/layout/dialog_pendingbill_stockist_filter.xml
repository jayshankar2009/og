<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="180dp"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:text="SORT PENDING BILLS BY"
        android:padding="8dp"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/mini"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="AMOUNT VALUE"
        android:padding="8dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/small"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioAmountValue">

    <RadioButton
        android:layout_width="wrap_content"
        android:hint="ASCENDING"
        android:padding="8dp"
        android:id="@+id/chk_ascending"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/small"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <RadioButton
        android:layout_width="wrap_content"
        android:hint="DESCENDING"
        android:padding="8dp"
        android:id="@+id/chk_descending"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/small"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    </RadioGroup>


    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@color/lighter_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="FILTER PENDING BILLS BY DATE"
        android:padding="8dp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/mini"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_border"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sp_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="center"
            android:text="Start Date"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="@dimen/small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_border"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/sp_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8sdp"
        android:gravity="center"
        android:text="End Date"
        android:padding="8dp"
        android:entries="@array/array_date_list"
        android:textColor="@color/black"
        android:textSize="@dimen/small" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@color/lighter_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:text="FILTER PENDING BILLS BY AMOUNT"
        android:padding="8dp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/mini"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_border"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:orientation="vertical">

    <Spinner
        android:id="@+id/sp_start_amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8sdp"
        android:gravity="center"
        android:padding="8dp"
        android:entries="@array/array_amount_range1"
        android:textColor="@color/black"
        android:textSize="@dimen/small" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_border"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:orientation="vertical">
    <Spinner
        android:id="@+id/sp_end_amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_8sdp"
        android:gravity="left|center"
        android:entries="@array/array_amount_range2"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/small" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@color/lighter_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="FILTER PENDING BILLS DUE DATE"
        android:padding="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/mini"
        android:layout_height="wrap_content" />
    <RadioButton
        android:layout_width="wrap_content"
        android:hint="SHOW ONLY DUE BILLS"
        android:padding="8dp"
        android:id="@+id/due_bills"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:textSize="@dimen/small"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/main_linerlayout_border"
            android:text="CLEAR"
            android:id="@+id/btn_clear"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/main_linerlayout_border"
            android:text="FILTER"
            android:id="@+id/btn_filter"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
