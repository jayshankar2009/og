<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="v_call_plan_activities"
            type="com.synergy.keimed_ordergenie.model.m_call_activities"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/activity_icon"
                android:layout_centerVertical="true"
                android:src="@drawable/orders"
                android:layout_height="20dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:id="@+id/lnr_time"
                android:layout_toRightOf="@+id/activity_icon"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Take Order"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/small"
                    android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:textColor="@color/black"
                tools:text="2.20 pm"
                android:textSize="@dimen/Extrasmall"
                android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_description"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="@dimen/Extrasmall"
                tools:text="Call Started"
              />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/lighter_gray"
            android:layout_height="1dp"/>

    </android.support.v7.widget.CardView>

</layout>
