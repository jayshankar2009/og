<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="com.synergy.keimed_ordergenie.activity.SaveDeliveryActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:padding="10dp">

            <TextView
                android:id="@+id/img_name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:src="@drawable/syrup"
                android:text="S"
                android:textColor="@color/white"
                android:textSize="@dimen/Subnormal"
                android:textStyle="bold" />

            <Space
                android:id="@+id/space"
                android:layout_width="5dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/img_name" />

            <TextView
                android:id="@+id/cust_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/space"
                android:paddingLeft="2dp"
                android:text="Customer Name"
                android:textSize="@dimen/small" />


            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cust_name"
                android:layout_toRightOf="@+id/space"
                android:padding="2dp"
                android:text="Blue Green Pharma"
                android:textColor="@color/black"
                android:textSize="@dimen/Subnormal" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layorderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/customborder"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblorderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:text="No of  Items"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/txt_no_of_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lblorderId"
                    android:layout_marginRight="10dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />

            </LinearLayout>

            <View
                android:id="@+id/centerView"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="#e7e7e7"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblorderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/centerView"
                    android:text="No of Boxes"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/txt_no_of_boxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblorderDate"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/centerView"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />
            </LinearLayout>

            <View
                android:id="@+id/rightview"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/orderDate"
                android:background="#e7e7e7" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Invoice_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/centerView"
                    android:text="No of  Packets"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/txt_no_of_packets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblorderDate"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/centerView"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/customborder"
            android:orientation="horizontal"
             android:visibility="gone"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:text="Total Items"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/txt_toatal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lblorderId"
                    android:layout_marginRight="10dp"
                    android:text="18"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"

                android:background="#e7e7e7"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_toRightOf="@+id/centerView"
                    android:text="Amount"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/inv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblorderDate"
                    android:layout_gravity="center_horizontal"

                    android:layout_toRightOf="@+id/centerView"
                    android:text="Rs. 8500"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/orderDate"
                android:background="#e7e7e7" />


            <TextView
                android:id="@+id/order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="View Order \n Details"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/small" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Invoice Selected"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/empty_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small"
                android:padding="@dimen/_4sdp"
                android:text="Selected Invoices"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_list">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:text="Delivery Status"
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/curve_white_background">

            <TextView
                android:id="@+id/btn_undelivered"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="undelivered"
                android:textAllCaps="true" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="#e7e7e7" />

            <TextView
                android:id="@+id/btn_delivered"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="delivered"
                android:textAllCaps="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/below_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioGroup
                android:id="@+id/rdb_g_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered to Chemist"
                    android:textSize="@dimen/small" />


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered to Owner"
                    android:textSize="@dimen/small" />


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:textSize="@dimen/small" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rdb_g_undelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Available"
                    android:textSize="@dimen/small" />


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Re Scheduled by Customer"
                    android:textSize="@dimen/small" />


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Missed the Customer"
                    android:textSize="@dimen/small" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:textSize="@dimen/small" />

            </RadioGroup>

            <!--<EditText-->
            <!--android:layout_width="match_parent"-->

            <!--android:layout_height="60dp"-->
            <!--android:background="@color/lighter_gray" />-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="Delivery Confirmation"-->
            <!--android:textSize="@dimen/small" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">


                <Button
                    android:id="@+id/btnTakeSelfie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:text="Take Selfie"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="#fff" />

                <Button
                    android:id="@+id/btTakeSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:text="Signature"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="#fff" />

                <Button
                    android:id="@+id/btScanQRCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:text="ScanQRCode"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@color/lighter_gray"
                    android:padding="20dp"
                    android:scaleType="center" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/lighter_gray"
                    android:padding="20dp"
                    android:scaleType="center" />
            </LinearLayout>


        </LinearLayout>
      <!--<TextView-->
          <!--android:layout_width="wrap_content"-->
          <!--android:layout_height="wrap_content"-->
          <!--android:id="@+id/txt_comment"-->
          <!--android:text="comment"/>-->
    </LinearLayout>
</ScrollView>